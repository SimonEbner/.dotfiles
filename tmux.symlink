bind-key C-Tab next-window
bind-key C-S-Tab previous-window
set-option -g status-position top
set-option -g default-shell /bin/zsh

# vim-like pane switching
bind -r l select-pane -U 
bind -r h select-pane -D 
bind -r k select-pane -L 
bind -r j select-pane -R 
bind -r C-l select-pane -U 
bind -r C-h select-pane -D 
bind -r C-k select-pane -L 
bind -r C-j select-pane -R 
bind -r C-b select-pane -R 

# and now unbind keys
unbind Up     
unbind Down   
unbind Left   
unbind Right  
